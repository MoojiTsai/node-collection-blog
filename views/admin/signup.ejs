<%- include('partials/header.ejs',{title:title}) %>




  <div class="container panel-md">
    <div class="row">
      <div class="container">
        <h2><%=title%></h2>
        
      </div>
    </div>

<%if(typeof errors !== 'undefined') { %>
  <%for( let error in errors) { %>
    <div class="alert alert-danger" role="alert">
       <%= errors[error].msg %>
    </div>
  <% } %>
<% } %>
    <form  action="<%= form_action%>" method="post">
      <div class="form-group">
        <label>帳號</label>
        <input placeholder="帳號" class="form-control" type="text" name="username">
      </div>
      <div class="form-group">
        <label>密碼</label>
        <input placeholder="密碼" class="form-control" type="password" name="password">
      </div>
      <div class="form-group">
        <label>確認密碼</label>
        <input  class="form-control" placeholder="確認密碼" type="password" name="password-Match">
      </div>

      <input type="submit" class="btn btn-primary" value="註冊">
    </form>

  </div>

<%- include('partials/footer.ejs') %>
